<Window x:Class="V2Architects.NumberingByPath.ReportWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:V2Architects.NumberingByPath"
             mc:Ignorable="d" 
            Width="280" Height="150"
            ResizeMode="NoResize"
            SizeToContent="Height"
            Title="Нумерация листов альбома" 
            WindowStartupLocation="CenterScreen">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock x:Name="reportMessage" TextAlignment="Center" Text="Обновлено 23." TextWrapping="Wrap"/>
                <Button Margin="0,20,0,0" Height="40" Content="Ок" Click="Button_Click"/>
            </StackPanel>
        </Grid>
</Window>
